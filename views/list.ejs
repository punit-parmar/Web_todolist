<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>ToDoList</title>
  <link rel="stylesheet" href="css/styles.css">
</head>

<body>
  <div class="box" id="heading">
    <h1><%= nextday %></h1>

  </div>
  <div class="box">


    <% for(var i=0 ; i < listitem.length;i++) { %>
      <form  action="/delete" method="post">
        <div class="item">
        <input type="checkbox" name="checkbox" value="<%= listitem[i]._id %>" onchange="this.form.submit()">
        <p><%= listitem[i].name %></p>
        </div>

      <%  } %>

      </form>

    <form action="/" method="post">
      <input type="text" name="new" placeholder="new item" autocomplete="off">
      <button type="submit" name="button">+</button>
    </form>
  </div>

</body>

</html>
